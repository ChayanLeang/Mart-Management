@{
    int i = 0;
}
@model List<SayuJapnShop.Models.Supplier>

<div class="m-2">
    <p class="text-center" style="font-size:25px">Supplier</p>
    <a asp-action="AddSupplier" class="btn btn-primary mb-1 mt-2 d-flex align-items-center justify-content-center" style="border-radius:150px;width:27px;height:27px;">
        <i class="material-icons">
            add
        </i>
    </a>
    <table class="table table-hover" style="border-radius:5px;box-shadow:0 2px 2px 2px grey">
        <thead>
            <tr>
                <th>No</th>
                <th>CompanyName</th>
                <th>OwnerName</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                i++;
                    <tr>
                        <td>@i</td>
                        <td>@supplier.CompanyName</td>
                        <td>@supplier.Owner</td>
                        <td>@supplier.PhoneNumber</td>
                        <td>@supplier.Address</td>
                        <td>@supplier.status</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="EditSupplier" asp-controller="Supplier" asp-route-id="@supplier.SupplierId">
                                <i class="fa fa-edit" style="font-size:17px;color:white"></i>
                            </a>
                        </td>

                    </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

