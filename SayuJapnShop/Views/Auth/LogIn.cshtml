@{
    Layout = null;
}
@model SayuJapnShop.Models.LogIn
<style>
    .main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100vh
    }



    form {
        width: 400px;
        display: flex;
        padding: 20px;
        height: 270px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 0px 2px 2px 2px grey;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
    }

    input {
        padding: 10px;
        width: 300px;
        outline: none;
        border: 2px solid grey;
        border-radius: 5px;
    }

        input:focus {
            border: 2px solid blue
        }

    p {
        font-size: 25px;
    }
</style>
<div class="main">
    <i class="material-icons mb-1" style="font-size:70px;color:gray">account_circle</i>
    <form method="post" asp-action="LogIn" asp-controller="Auth">
        <p>User LogIn</p>
        <div class="d-flex flex-column">
            <input type="text" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            <span class="text-danger">@TempData["ErrorEmail"]</span>
        </div>
        <div class="d-flex flex-column">
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <span class="text-danger">@TempData["ErrorPassword"]</span>
        </div>

        <button type="submit" class="btn btn-success" onclick="LogIn()">LogIn</button>

    </form>
</div>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">


