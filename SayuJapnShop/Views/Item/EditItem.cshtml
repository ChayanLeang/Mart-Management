@model SayuJapnShop.Models.Item
<style>
    .main {
        height: 300px;
        background-color: white;
        box-shadow: 0 2px 2px 2px grey;
        border-radius: 10px;
        margin: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center
    }

    #mainForm {
        width: 850px;
        display: flex;
        justify-content: space-between
    }

    input {
        padding: 8px;
        width: 380px;
        outline: none;
        border: 2px solid grey;
        border-radius: 5px
    }

    select {
        padding: 8px;
        width: 380px;
        outline: none;
        border: 2px solid grey;
        border-radius: 5px
    }

    input:focus {
        border: 2px solid blue;
    }

    p {
        font-size: 25px
    }

    #gender {
        padding: 8px;
        width: 380px;
        outline: none;
        border: 2px solid grey;
        border-radius: 5px
    }

    #radio {
        padding: 3px
    }
    button {
        width: 80px
    }
</style>

<div class="main">
    <p>Edit Item</p>
    <form method="post" asp-action="EditItem">
        <div class="d-flex mb-3" id="mainForm">
            <div class="d-flex flex-column">
                <input type="text" asp-for="ItemId" readonly />
                <span></span>
            </div>
            <div class="d-flex flex-column">
                <input type="text" asp-for="ItemName" placeholder="Name" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
                <span class="text-danger">@TempData["ItemName"]</span>
            </div>
        </div>
        <div class="d-flex mb-3" id="mainForm">
            <div class="d-flex flex-column">
                <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"CategoryId","CategoryName"))">
                    <option value="">Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="d-flex flex-column">
                <div class="d-flex" id="gender">
                    <span>Status</span>
                    <input type="radio" id="radio" value="active" asp-for="status" />
                    <span>active</span>
                    <input type="radio" asp-for="status" id="radio" value="Inactive" />
                    <span>Inactive</span>

                </div>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>



